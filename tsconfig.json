{
  "compilerOptions": {
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2024",
    "module": "NodeNext",
    "moduleDetection": "force",
    "isolatedModules": true,
    "rootDir": "src",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "lib": ["es2024"]
  },
  "include": ["src/**/*.ts"]
}
